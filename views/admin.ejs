<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <link href="css/style.css" rel="stylesheet">
    <title>SnapSeats</title>
</head>

<body>
    <nav class="navbar bg-body-tertiary fixed-top py-3">
        <div class="container-fluid">
          <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <form action="/logout" method="post">
            <button class="btn btn-outline-success">LogOut</button>
         
          </form>
          <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
            <div class="offcanvas-header">
              <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Admin Page</h5>
              <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
              <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="/admin">Buses Schedule</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/admin/updatebus">Add new bus</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link active" href="/admin/seatingplanbybus">Seating Plan</a>
                </li>
                
                  </ul>
                </li>
              </ul>
              
            </div>
          </div>
        </div>
      </nav>
      <% if (route_cards.length > 0) { %>
      <%  route_cards.forEach(function(route_card){ %>
        <form action="/delete" method="post">
      <div class="container">
        <div class="bus-card my-5">
          <div class="bus-details">
            <div class="bus-title"><%=route_card.bus_no%></div>
            <div class="bus-route"><%=route_card.src%> to <%=route_card.dest%></div>
            <div class="bus-time">Duration : <%=route_card.journey_time%></div>
            <div class="bus-time">Fare : <%=route_card.fare%></div>
            
            <div class="bus-time">Distance : <%=route_card.distance%></div>
            
            <div class="bus-available-days">Available-date: <%=route_card.journey_date%></div>
          </div>
          <!-- <a href="/delete" class="bus-btn">Delete Bus</a> -->
          <button type="submit"class="bus-btn" name="card_id" value="<%=route_card.route_id%>" >Delete Bus</button>
        </div>
      </div>
    </form>
      <% })} %>
     
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>

</html>
